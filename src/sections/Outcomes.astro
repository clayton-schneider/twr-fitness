---
import { Image } from "astro:assets";

import outcomeImg from "@imgs/outcomes-bg.png";

const outcomes = [
  "Say goodbye to back and joint pain",
  "Tone up",
  "Increased energy levels",
  "Happier you - Happier mood",
  "Increased strength",
  "Recover from injury",
];
---

<section class="px-edge py-10 lg:py-20 relative lg:min-h-[1000px]">
  <Image
    class="absolute inset-0 h-full object-cover object-right"
    quality={100}
    src={outcomeImg}
    alt="man happy to be working out"
  />
  <div class="xl:hidden w-full h-full bg-black/50 absolute inset-0"></div>

  <div class="max-w-screen-2xl mx-auto relative z-10">
    <div class="lg:mt-52 max-w-2xl mx-auto lg:mx-0 text-center lg:text-left">
      <h2 class="mt-2 font-oswald font-bold text-5xl text-white">
        TWR Fitness is About Enjoying the Process and Building Consistency
      </h2>
      <p class="mt-5 text-white text-lg">
        It is my job to pay attention to every tiny detail, the way you move,
        and the way you feel. It's your job to come in and work hard, and
        together weâ€™ll make sure you leave every session feeling satisfied.
      </p>
      <ul class="mt-4 list-disc list-inside font-bold text-white text-xl">
        {outcomes.map((outcome) => <li class="text">{outcome}</li>)}
      </ul>
      <a
        href="/your-fitness-journey"
        class="mt-7 bg-accent py-5 px-6 rounded text-white font-bold inline-block"
        >Start Your Fitness Journey For Free</a
      >
    </div>
  </div>
</section>
